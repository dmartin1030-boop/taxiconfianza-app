<script>
  // 1. Cargar datos del usuario desde el LocalStorage
  const userData = JSON.parse(localStorage.getItem('userTaxiConfianza'));

  if (userData) {
    // 2. Personalizar el saludo con Nombres y Apellidos reales
    document.getElementById('owner-name').innerText = `${userData.nombres} ${userData.apellidos}`;
    
    // 3. (Opcional) Si quieres mostrar el nivel del propietario basado en datos
    // document.getElementById('owner-level').innerText = userData.nivel || 'Bronce';
  } else {
    // Si no hay datos, redirigir al login por seguridad
    window.location.href = 'login.html';
  }

  // 4. Configurar el botón "Salir"
  const btnSalir = document.querySelector('.btn.danger');
  btnSalir?.addEventListener('click', () => {
    localStorage.removeItem('userTaxiConfianza');
    window.location.href = 'index.html';
  });

  // 5. Menú móvil (tu código existente)
  const sidebar = document.getElementById('sidebar');
  const overlay = document.getElementById('overlay');
  const btnOpenMenu = document.getElementById('btnOpenMenu');

  btnOpenMenu?.addEventListener('click', () => {
    sidebar.classList.add('open');
    overlay.classList.add('show');
  });

  overlay?.addEventListener('click', () => {
    sidebar.classList.remove('open');
    overlay.classList.remove('show');
  });
</script>
